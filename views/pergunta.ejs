<%- include ('partials/header.ejs')%>
<body>
    <%- include ('partials/navbar.ejs')%>
    <div class="container">
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr>
        <form method="POST" action="/responder">
            <h3>Responder</h3>
            <label>Resposta</label>
            <textarea placeholder="Digite sua resposta" class="form-control" name="corpo">
            </textarea> <br>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <button class="btn btn-success">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta => {%>
            <br>
            <div class="card">
                <div class="card-body">
                    <p><%= resposta.corpo%></p>
                </div>
            </div>
        <% }) %>    
    </div>
</body>
<%- include ('partials/footer.ejs')%>